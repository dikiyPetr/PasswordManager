<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="200dp"
                    android:layout_height="81dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:src="@drawable/keyb" />

                <ImageView
                    android:id="@+id/cvst"
                    android:layout_width="20dp"

                    android:layout_height="20dp"


                    android:layout_alignBottom="@+id/photo"
                    android:layout_alignEnd="@+id/photo"
                    android:layout_alignRight="@+id/photo"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/mainiconb"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cvpass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="11dp"
                        android:text="пароль"
                        android:textAlignment="viewStart"
                        android:textSize="25sp"
                        android:paddingRight="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.example.dikiy.passwordmain.ScrollingTextView
                            android:id="@+id/cvtg"
                            android:layout_width="172dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/button2"
                            android:layout_centerHorizontal="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:text="теги,теги,теги,теги,теги,теги,теги,теги,теги,теги." />

                        <TextView
                            android:id="@+id/cvdata"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/cvpass"
                            android:foregroundGravity="top"
                            android:gravity="end"
                            android:text="Jun,5,2012"
                            android:textAlignment="textEnd"
                            android:paddingRight="5dp"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>