<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dikiy.passwordmain">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.  INTERNET" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".PasswordActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".PreloaderActivity"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ShareGetActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".LockActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="pass.add.com"
                    android:pathPattern=".*"
                    android:scheme="http" />
                <data
                    android:host="pass.add.com"
                    android:pathPattern=".*"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FolderActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".UserActivity"
            android:windowSoftInputMode="stateHidden" />

        <service android:name=".Fly" />

        <!-- <meta-data -->
        <!-- android:name="io.fabric.ApiKey" -->
        <!-- android:value="7e8f5d72fd7afb677913b2ba0cb09eae28a0113d" /> -->
        <activity
            android:name=".ServiceActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AddServiceActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ServiceCommandActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AddServiceCommandActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>